<Window x:Class="Cinema_TRIZBD.FilmDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        Height="700" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1A"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#7B2CBF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Постер фильма -->
                <Border CornerRadius="5" Margin="0 0 0 20">
                    <Image Source="{Binding Image}" 
                           Height="300"
                           Stretch="UniformToFill">
                        <Image.Effect>
                            <DropShadowEffect Color="#7B2CBF" BlurRadius="10" ShadowDepth="3"/>
                        </Image.Effect>
                    </Image>
                </Border>

                <!-- Название фильма -->
                <TextBlock Text="{Binding Title}" 
                           Foreground="White" 
                           FontSize="24"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           Margin="0 0 0 10"/>

                <!-- Длительность и жанры -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                    <TextBlock Text="{Binding DurationString}" Foreground="#9D4EDD"/>
                    <TextBlock Text="  |  " Foreground="White"/>
                    <TextBlock Text="{Binding GenresString}" Foreground="#9D4EDD"/>
                </StackPanel>

                <!-- Описание фильма -->
                <TextBlock Text="{Binding StoryLine}" 
                           Foreground="White" 
                           TextWrapping="Wrap"
                           FontSize="14"
                           Margin="0 0 0 30"/>

                <!-- Кнопка -->
                <Button Content="Смотреть сеансы" 
                        Height="45"
                        FontSize="18"
                        Click="SessionsButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
