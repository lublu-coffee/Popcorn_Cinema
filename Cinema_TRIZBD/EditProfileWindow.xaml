<Window x:Class="Cinema_TRIZBD.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование профиля" 
        Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1A">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Редактирование профиля" 
                       Foreground="#9D4EDD"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" Foreground="#AAAAAA" Margin="0,0,10,5"/>
                <TextBox x:Name="FirstNameBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Фамилия:" Grid.Row="1" Grid.Column="0" Foreground="#AAAAAA" Margin="0,0,10,5"/>
                <TextBox x:Name="LastNameBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Отчество:" Grid.Row="2" Grid.Column="0" Foreground="#AAAAAA" Margin="0,0,10,5"/>
                <TextBox x:Name="PatronymicBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Город:" Grid.Row="3" Grid.Column="0" Foreground="#AAAAAA" Margin="0,0,10,5"/>
                <TextBox x:Name="CityBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Email:" Grid.Row="4" Grid.Column="0" Foreground="#AAAAAA" Margin="0,0,10,5"/>
                <TextBox x:Name="EmailBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"/>
            </Grid>

            <Button Content="Сохранить" 
                    Background="#7B2CBF"
                    Foreground="White"
                    Padding="10,5"
                    FontSize="16"
                    Margin="0,20,0,0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
