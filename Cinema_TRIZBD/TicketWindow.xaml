<Window x:Class="Cinema_TRIZBD.TicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ваш билет" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1A">

    <Border BorderBrush="#7B2CBF" BorderThickness="2" CornerRadius="10" Margin="20">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="КИНОБИЛЕТ" 
                       Foreground="#9D4EDD"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Информация о билете -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="{Binding FilmTitle}" 
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <TextBlock Text="{Binding CinemaInfo}" 
                           Foreground="#AAAAAA"
                           Margin="0,0,0,5"/>

                <TextBlock Text="{Binding SessionInfo}" 
                           Foreground="#AAAAAA"
                           Margin="0,0,0,5"/>

                <TextBlock Text="{Binding SeatInfo}" 
                           Foreground="#9D4EDD"
                           FontSize="16"
                           Margin="0,10,0,0"/>

                <TextBlock Text="{Binding PriceInfo}" 
                           Foreground="#7B2CBF"
                           FontSize="18"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Кнопка покупки -->
            <Button Grid.Row="2" 
                    Content="Подтвердить покупку"
                    Background="#7B2CBF"
                    Foreground="White"
                    FontSize="16"
                    Padding="10,5"
                    HorizontalAlignment="Center"
                    Click="ConfirmButton_Click"/>
        </Grid>
    </Border>
</Window>
