<UserControl x:Class="Cinema_TRIZBD.FilmCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="300">
    <Border Background="#333333" CornerRadius="5" Padding="10">
        <StackPanel>
            <Image Source="{Binding Image}" Height="180" Stretch="UniformToFill"/>
            <TextBlock Text="{Binding Title}" Foreground="White" FontSize="16" 
                      Margin="0 10 0 5" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Duration}" Foreground="#AAAAAA"/>
            <Button Content="Подробнее" Background="#7B2CBF" Foreground="White"
                    Margin="0 10" Click="DetailsButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>