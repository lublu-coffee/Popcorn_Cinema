<Window x:Class="Cinema_TRIZBD.UserRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema_TRIZBD"
        mc:Ignorable="d"
        Title="Регистрация | Кинотеатр Popcorn" 
        Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="Black">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PurpleAccentBrush}" Padding="15">
            <TextBlock Text="Регистрация нового пользователя" 
                       FontSize="24" 
                       FontWeight="Bold"
                       FontFamily="Comic Sans MS"
                       Foreground="{StaticResource TextBrush}"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="600"
                        Margin="20">
                <!-- Первая строка -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Имя" 
                                   FontFamily="Comic Sans MS"
                                   HorizontalAlignment="Left"/>
                        <TextBox x:Name="firstNameTextBox"
                                 FontFamily="Comic Sans MS"
                                 Height="40"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Фамилия" 
                                   FontFamily="Comic Sans MS"
                                   HorizontalAlignment="Left"/>
                        <TextBox x:Name="lastNameTextBox"
                                 FontFamily="Comic Sans MS"
                                 Height="40"/>
                    </StackPanel>
                </Grid>

                <!-- Вторая строка -->
                <Grid Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Отчество" 
                                   FontFamily="Comic Sans MS"
                                   HorizontalAlignment="Left"/>
                        <TextBox x:Name="patronymicTextBox"
                                 FontFamily="Comic Sans MS"
                                 Height="40"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Город" 
                                   FontFamily="Comic Sans MS"
                                   HorizontalAlignment="Left"/>
                        <TextBox x:Name="cityTextBox"
                                 FontFamily="Comic Sans MS"
                                 Height="40"/>
                    </StackPanel>
                </Grid>

                <!-- Email -->
                <TextBlock Text="Email" 
                           Margin="0 20 0 0"
                           FontFamily="Comic Sans MS"
                           HorizontalAlignment="Left"/>
                <TextBox x:Name="emailTextBox"
                         FontFamily="Comic Sans MS"
                         Height="40"/>

                <!-- Пароли -->
                <Grid Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Пароль" 
                                   FontFamily="Comic Sans MS"
                                   HorizontalAlignment="Left"/>
                        <PasswordBox x:Name="passwordBox"
                                    FontFamily="Comic Sans MS"
                                    Height="40"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Подтверждение пароля" 
                                   FontFamily="Comic Sans MS"
                                   HorizontalAlignment="Left"/>
                        <PasswordBox x:Name="confirmPasswordBox"
                                    FontFamily="Comic Sans MS"
                                    Height="40"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0 30">
                    <Button Content="Зарегистрироваться" 
                            Click="RegisterButton_Click"
                            Width="180"
                            Height="50"
                            Margin="0 0 20 0"/>

                    <Button Content="Назад" 
                            Click="BackButton_Click"
                            Width="180"
                            Height="50"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Подвал -->
        <Border Grid.Row="2" Background="#222222" Padding="10">
            <TextBlock Text="Заполните все поля для регистрации" 
                       HorizontalAlignment="Center"
                       Foreground="#AAAAAA"
                       FontFamily="Comic Sans MS"/>
        </Border>
    </Grid>
</Window>